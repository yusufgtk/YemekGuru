@model RestaurantModel

@{
    Layout="_LayoutAdmin";
    ViewData["Title"]="Restorant Detayı";
    var Alert = TempData["Alert"];
    var ReturnUrl="/admin/restaurantdetail";
}

<div>
    <div class="container py-5">
        @if(TempData["Message"]!=null)
        {
            <div class="alert @Alert text-center">
                @TempData["Message"]
            </div>
        }
        <div class="mb-3">
            <h2><span class="fw-bold">@ViewBag.UserFullName</span> adlı kullanıcının restorant bilgileri</h2>
        </div>
        <div class="row g-0">
            <div class="col-12">
                <div class="row g-0" style="border-color: #ff6600; border-style: solid; border-width: 3px; border-radius: 15px;">
                    <div class="col-12 col-md-4 col-lg-4 col-xl-4 col-xxl-4 d-flex justify-content-center align-content-center flex-wrap">
                        @if(Model.ImageUrl!=null)
                        {
                            <img src="~/RestaurantImages/@Model.ImageUrl" alt="" style="width: 200px; height: 200px;  border-radius: 20px;" class="m-1">
                        }
                        else
                        {
                            <img src="~/RestaurantImages/YemekGuru.png" alt="" style="width: 250px; height: 250px;  border-radius: 20px;">
                        }
                    </div>
                    <div class="col-12 col-md-8 col-lg-8 col-xl-8 col-xxl-8 d-flex justify-content-center">
                        <ul class="list-group w-100" style="border-radius: 15px;">
                            <li class="list-group-item">@Html.DisplayNameFor(i=>@Model.Name) : @Model.Name</li>
                            <li class="list-group-item">@Html.DisplayNameFor(i=>@Model.Description) : @Model.Description</li>
                            <li class="list-group-item">@Html.DisplayNameFor(i=>@Model.PhoneNumber) : @Model.</li>
                            <li class="list-group-item">@Html.DisplayNameFor(i=>@Model.EmailAdress) : @Model.EmailAdress</li>
                            <li class="list-group-item">@Html.DisplayNameFor(i=>@Model.Country) : @Model.Country</li>
                            <li class="list-group-item">@Html.DisplayNameFor(i=>@Model.CityId) : @ViewBag.City.Name</li>
                            <li class="list-group-item">@Html.DisplayNameFor(i=>@Model.DistrictId) : @ViewBag.District.Name</li>
                            <li class="list-group-item">@Html.DisplayNameFor(i=>@Model.Address) : @Model.Address</li>
                            <li class="list-group-item">@Html.DisplayNameFor(i=>@Model.OpeningTime) : @Model.OpeningTime</li>
                            <li class="list-group-item">@Html.DisplayNameFor(i=>@Model.ClosingTime) : @Model.ClosingTime</li>
                            <li class="list-group-item">@Html.DisplayNameFor(i=>@Model.MinimumOrderPrice) : @Model.MinimumOrderPrice</li>
                            
                        </ul>
                    </div>
                </div>
