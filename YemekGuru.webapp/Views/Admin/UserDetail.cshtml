@model UserModel

@{
    Layout="_LayoutAdmin";
    ViewData["Title"]="Kullanıcı Detayı";
    var Alert = TempData["Alert"];
    var ReturnUrl="/admin/userdetail";
}

<div>
    <div class="container py-5">
        @if(TempData["Message"]!=null)
        {
            <div class="alert @Alert text-center">
                @TempData["Message"]
            </div>
        }
        <div class="mb-3">
            <h2><span class="fw-bold">@ViewBag.RestaurantName</span> adlı restorantın sahibinin bilgileri</h2>
        </div>
        <div class="row g-0">
            <div class="col-12">
                <div class="row g-0" style="border-color: #ff6600; border-style: solid; border-width: 3px; border-radius: 15px;">
                    <div class="col-12 col-md-4 col-lg-4 col-xl-4 col-xxl-4 d-flex justify-content-center align-content-center flex-wrap">
                        @if(Model.ImageUrl!=null)
                        {
                            <img src="~/UserImages/@Model.ImageUrl" alt="" style="width: 200px; height: 200px;  border-radius: 20px;" class="m-1">
                        }
                        else
                        {
                            <img src="~/UserImages/user.png" alt="" style="width: 250px; height: 250px;  border-radius: 20px;">
                        }
                    </div>
                    <div class="col-12 col-md-8 col-lg-8 col-xl-8 col-xxl-8 d-flex justify-content-center">
                        <ul class="list-group w-100" style="border-radius: 15px;">
                            <li class="list-group-item">@Html.DisplayNameFor(i=>@Model.UserName) : @Model.UserName</li>
                            <li class="list-group-item">@Html.DisplayNameFor(i=>@Model.FirstName) : @Model.FirstName</li>
                            <li class="list-group-item">@Html.DisplayNameFor(i=>@Model.LastName) : @Model.LastName</li>
                            <li class="list-group-item">@Html.DisplayNameFor(i=>@Model.TCKN) : @Model.TCKN</li>
                            <li class="list-group-item">@Html.DisplayNameFor(i=>@Model.PhoneNumber) : @Model.PhoneNumber</li>
                            <li class="list-group-item">@Html.DisplayNameFor(i=>@Model.EmailAddress) : @Model.EmailAddress</li>
                            <li class="list-group-item">@Html.DisplayNameFor(i=>@Model.BirthDay) : @Model.BirthDay</li>
                            <li class="list-group-item">@Html.DisplayNameFor(i=>@Model.GuruPuan) : @Model.GuruPuan</li>
                        </ul>
                    </div>
                </div>
