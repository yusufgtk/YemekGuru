@model AddCommnetModel
@{
    ViewData["Ttile"]="Restorant Yorum";
}

<div style="min-height: 75vh;">
    <div class="container py-5">
        <div class="mb-5">
            <h3 class="text-center text-black">@ViewBag.RestaurantName Restorantı Değerlendir</h3>
        </div>
        <div>
            <form asp-controller="Restaurant" asp-action="AddRestaurantComment" method="post">
                <input type="hidden" name="orderId" value="@Model.OrderId">
                <div class="form-floating mb-3">
                    <textarea class="form-control" placeholder="Leave a comment here" asp-for="Description" style="height: 100px"></textarea>
                    <label for="floatingTextarea2">Restorant hakkında fikirlerinizi yazın...</label>
                    <span asp-validation-for="Description"></span>
                </div>
                <div class="d-flex justify-content-end">
                    <button class="btn btn-primary"><span class="me-2">Yorum Yap</span><i class="fa-solid fa-paper-plane"></i></button>
                </div>
                
            </form>
        </div>
    </div>
</div>