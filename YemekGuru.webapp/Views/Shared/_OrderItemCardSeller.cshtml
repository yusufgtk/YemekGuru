@model OrderItemModel

<div class="card mb-1" style="height: 150px;">
    <div class="row g-0">
        <div class="col-3 col-lg-2 col-xl-2 col-xxl-2">
            @if(Model.ProductModel != null && Model.ProductModel.ImageUrl != null)
            {
                <div style="height: 150px; ">
                    <img src="~/ProductImages/@Model.ProductModel.ImageUrl" class="img-fluid rounded-start" alt="@Model.ProductModel.Name" style="width: 100%; height: 100%;">
                </div>
                
            }
            else
            {
                <div style="height: 150px;">
                    <img src="~/ProductImages/yemekguru.jpg" class="img-fluid rounded-start" alt="@Model.ProductModel.Name" width="100%" style="width: 100%;">
                </div>
                
            }
            
        </div>
        <div class="col-9 col-lg-10 col-xl-10 col-xxl-10">
            <div class="card-body">
                <h5 class="card-title">@Model.ProductModel.Name</h5>
                <small>İçindekiler: @Model.ProductModel.Content</small>
                <div class="mt-3">
                    <span>@Model.Amount Adet</span><i class="fa-solid fa-xmark mx-1"></i><span>@Model.Price TL</span><i class="fa-solid fa-equals mx-1"></i>
                    <span>@Model.TotalPrice TL</span>
                </div>
                
            </div>
        </div>
    </div>
</div>