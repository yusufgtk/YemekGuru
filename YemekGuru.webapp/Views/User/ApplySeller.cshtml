@model ApplySellerViewModel
@{
    ViewData["Title"] = "Satıcı Ol";
    var Alert = TempData["Alert"];
}

<div class="container my-5">

    @if(ViewBag.ApplySellerState!=null)
    {
        <div class="alert alert-warning text-center my-5" role="alert">
            <i class="fa-solid fa-rotate-left fa-spin fa-spin-reverse fa-xl me-3"></i><span>@ViewBag.ApplySellerState</span>
        </div>
    }
    else if(ViewBag.IsSeller==true)
    {
        <div class="alert alert-success text-center my-5" role="alert">
            <i class="fa-regular fa-handshake fa-2xl me-3"></i><i class="fa-solid fa-circle-check fa-fade fa-xl me-3"></i><span>Onaylı Satıcısınız.</span>
        </div>
    }
    else
    {
        <div class="mb-5">
            <h2 class="text-center">Yemek Guru Platformunda Satıcı Olma Formu</h2>
        </div>
        @if(TempData["Message"]!=null)
        {
            <div class="text-center alert @Alert">
                @TempData["Message"]
            </div>
        }
        <div class="d-flex justify-content-center">
            <div class="mx-1 p-3 p-lg-5 p-xl-5 p-xxl-5 shadow-lg bg-light" style="width: 600px; border-color: #ff6600; border-style: solid; border-width: 5px; border-radius: 20px;">
                <form asp-controller="User" asp-action="ApplySeller" method="post">
                    <input type="hidden" name="userId" value="@Model.UserId" readonly>
                    <div asp-validation-summary="All"></div>
                    <div class="input-group mb-3">
                        <input name="file" type="file" class="form-control">
                        <label class="input-group-text" for="file">Restaurant Resmi</label>
                    </div>
                    <div class="mb-3">
                        <label asp-for="FirstName" class="form-label"></label>
                        <input asp-for="FirstName" class="form-control" readonly>
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="LastName" class="form-label"></label>
                        <input asp-for="LastName" class="form-control" readonly>
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="TCKN" class="form-label"></label>
                        <input asp-for="TCKN" class="form-control">
                        <span asp-validation-for="TCKN" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="BirthDay" class="form-label"></label>
                        <input asp-for="BirthDay" class="form-control" readonly>
                        <span asp-validation-for="BirthDay" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="PhoneNumber" class="form-label"></label>
                        <input asp-for="PhoneNumber" class="form-control" readonly>
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="RestaurantName" class="form-label"></label>
                        <input asp-for="RestaurantName" class="form-control">
                        <span asp-validation-for="RestaurantName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="RestaurantPhoneNumber" class="form-label"></label>
                        <input asp-for="RestaurantPhoneNumber" class="form-control">
                        <span asp-validation-for="RestaurantPhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="MinOrderPrice" class="form-label"></label>
                        <input asp-for="MinOrderPrice" class="form-control" min="0">
                        <span asp-validation-for="MinOrderPrice" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="CityId" class="form-label"></label>
                        <select asp-for="CityId" class="form-select" aria-label="Default select example">
                            <option selected>Seçiniz...</option>
                            @if (ViewBag.Cities != null)
                            {
                                foreach (var city in ViewBag.Cities)
                                {
                                    <option value="@city.Id">@city.Name</option>
                                }
                            }
                        </select>
                        <span asp-validation-for="CityId" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="DistrictId" class="form-label"></label>
                        <select asp-for="DistrictId" class="form-select" aria-label="Default select example">
                            <option selected>Seçiniz...</option>
                            @if (ViewBag.Districts != null)
                            {
                                @foreach(var district in ViewBag.Districts)
                                {
                                    <option value="@district.Id">@district.Name</option>
                                }
                            }
                            
                        </select>
                        <span asp-validation-for="DistrictId" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Address" class="form-label"></label>
                        <textarea asp-for="Address" class="form-control" style="height: 100px;"></textarea>
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="mt-5 d-flex justify-content-center">
                        <button class="btn text-white fs-5" style="background-color: #000;"><span class="me-2">Başvur</span><i class="fa-solid fa-file-signature fa-lg"></i></button>
                    </div>
                </form>
            </div>
        </div>
    }

</div>