@model UpdatePassword
@{
    ViewData["Title"] = "Şifre Güncelleme";
    var Alert = TempData["Alert"];
}

<div class="container my-5">
    <div>
        <h2 class="text-center">Şifre Güncelleme Formu</h2>
    </div>
    <div>

    </div>
    @if(TempData["Message"]!=null)
    {
        <div class="d-flex justify-content-center">
            <div class="alert @Alert text-center my-3" role="alert" style="width: 500px;">
                @TempData["Message"]
            </div>
        </div>
    }
    <div class="d-flex justify-content-center">
        <div class="mx-2" style="width: 500px;">
            <form asp-controller="User" asp-action="UpdatePassword" method="post">
                <div asp-validation-summary="All"></div>
                <input type="hidden" name="userId" value="@Model.UserId">
                <div class="mb-3">
                    <label asp-for="CurrentPassword" class="form-label"></label>
                    <input asp-for="CurrentPassword" class="form-control">
                    <span asp-validation-for="CurrentPassword" class="text-danger mt-1 fw-bold"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="NewPassword" class="form-label"></label>
                    <input asp-for="NewPassword" class="form-control">
                    <span asp-validation-for="NewPassword" class="text-danger mt-1 fw-bold"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="ConfirmNewPassword" class="form-label"></label>
                    <input type="password" asp-for="ConfirmNewPassword" class="form-control">
                    <span asp-validation-for="ConfirmNewPassword" class="text-danger mt-1 fw-bold"></span>
                </div>
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary">Güncelle</button>
                </div>
            </form>
        </div>
    </div>
    
</div>
